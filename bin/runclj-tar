#!/bin/bash
set -euo pipefail
filepath=$1
runclj-release $filepath >&2
name=$(basename $filepath)
cd $(runclj-root $filepath)/../..
root=.lein/$name
paths_that_exist() {
    for path in "$@"; do
        if ls $path &>/dev/null; then
            echo $path
        fi
    done
}
tar czf - $(paths_that_exist \
                $name \
                $(runclj-meta $filepath :static | while read path; do echo $root/$(basename $path); done) \
                $root/release.js \
                $root/package.json \
                $root/package-lock.json \
                $root/node_modules \
                $root/index.html)
