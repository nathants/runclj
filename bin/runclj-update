#!/bin/bash
set -euo pipefail
filepath=$1
root=$(runclj-root $filepath)
src=$root/src
ns=$(runclj-deps $filepath :ns | tr '-' '_')
runclj-deps $filepath :macro > $src/$ns.clj
if [ "${release:-n}" = "y" ]; then
    runclj-deps $filepath :source | grep -v '(defonce repl (repl/connect' > $src/$ns.cljs
else
    runclj-deps $filepath :source > $src/$ns.cljs
fi
